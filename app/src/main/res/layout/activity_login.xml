<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:forceDarkAllowed="true"
    tools:context=".LoginActivity">
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/img"
        android:contentDescription="My Image Button"
        android:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:id="@+id/backBtn"
        android:forceDarkAllowed="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Welcome back \n You've been missed !"
        android:textSize="34sp"
        android:textColor="#999999"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/missUTxt"
        android:forceDarkAllowed="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email or UserName"
        android:textSize="18sp"
        android:layout_below="@+id/missUTxt"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/missUTxt"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:id="@+id/userMailTxt"
        android:forceDarkAllowed="true"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="\tEmail or UserName"
        android:inputType="textEmailAddress"
        android:layout_alignLeft="@+id/userMailTxt"
        android:layout_below="@+id/userMailTxt"
        android:background="#B2BEB5"
        android:id="@+id/userMail"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        android:layout_below="@+id/userMail"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/missUTxt"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:id="@+id/userPasswordTxt"
        android:forceDarkAllowed="true"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="\tPassword"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/userMailTxt"
        android:layout_below="@+id/userPasswordTxt"
        android:background="#B2BEB5"
        android:id="@+id/userPassword"
        android:forceDarkAllowed="true"
        />
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userPassword"
        android:layout_marginTop="15dp"
        android:id="@+id/loginBtn"
        android:forceDarkAllowed="true"
        />
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="forgot Password?"
        android:textSize="14sp"
        android:textColor="#0000FF"
        android:backgroundTint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginBtn"
        android:id="@+id/forgotBtn"
        android:forceDarkAllowed="true"
        />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgotBtn"
        android:id="@+id/progressBar"
        />
</RelativeLayout>